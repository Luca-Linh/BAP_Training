<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script src="/estate/static/src/js/integer_color_picker.js" type="text/javascript"/>
            <link href="/estate/static/src/scss/integer_color_picker.scss" rel="stylesheet" type="text/scss"/>

            <script src="/estate/static/src/js/month_year_widget.js" type="text/javascript"/>
            <link href="/estate/static/src/scss/month_year_widget.scss" rel="stylesheet" type="text/scss"/>

            <script src="/estate/static/src/js/button_widget.js" type="text/javascript"/>
            <link href="/estate/static/src/scss/button_widget.scss" rel="stylesheet" type="text/scss"/>

            <link rel="stylesheet" type="text/scss" href="/estate/static/src/scss/custom_navbar.scss"/>
        </xpath>
    </template>

    <template id="assets_homepage" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <link href="/estate/static/src/scss/custom_homepage.scss" rel="stylesheet" type="text/scss"/>
        </xpath>
    </template>

    <template id="_assets_custom_variables" inherit_id="web._assets_primary_variables">
        <xpath expr="." position="inside">
            <link href="/estate/static/src/scss/custom_community_color.scss" rel="stylesheet" type="text/scss"/>
        </xpath>
    </template>
</odoo>