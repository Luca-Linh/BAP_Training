<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
<!--Tree View Estate-->
        <record id="estate_property_view_tree" model="ir.ui.view">
            <field name="name">estate.view.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="Estate Property" >
                    <field name="name" string="Title"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability"/>
                    <field name="property_type_id"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
<!--Form View Estate-->
        <record id="estate_property_view_form" model="ir.ui.view">
            <field name="name">estate.view.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
            <form string="Real Estate">
                <header>
                    <button name="action_set_sold" type="object" string="Sold"
                            states="new,offer_received,offer_accepted" class="btn-primary"/>
                    <button name="action_set_cancelled" type="object" string="Cancel"
                        states="new,offer_received,offer_accepted" class="btn-secondary"/>
                </header>
                <sheet>
                    <button name="action_set_sold" type="object" string="Sold"
                            states="new,offer_received,offer_accepted" class="btn-primary"/>
                    <button name="action_set_cancelled" type="object" string="Cancel"
                        states="new,offer_received,offer_accepted" class="btn-secondary"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="code" readonly="1"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                    </group>
                    <notebook>
<!--                        Page Description-->
                    <page string="Description">
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="total_area" readonly="1"/>
                            <field name="garden_area" attrs="{'invisible':[('garden','=',False)]}"/>
                            <field name="garden_orientation" attrs="{'invisible':[('garden','=',False)]}"/>
                        </group>
                    </page>
<!--                        Page Offers-->
                    <page string="Offers">
                        <field name="offer_ids" context="{'default_property_id': active_id}">
                            <tree editable="bottom">
                                <field name="price"/>
                                <field name="partner_id"/>
                                <field name="status"/>
                            </tree>
                        </field>
                    </page>
<!--                        Page Other Info-->
                    <page string="Other Info">
                        <group>
                            <field name="user_id"/>
                            <field name="partner_id"/>
                        </group>
                    </page>
                    </notebook>
                </sheet>
            </form>
            </field>
        </record>

        <record id="estate_property_view_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Estate Property Search">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <field name="property_type_id"/>
                    <filter string="State New" name="state_new" domain="[('state', '=' ,'new')]"/>
                    <filter string="State Offer Received" name="state_offer_received" domain="[('state', '=' ,'offer_received')]"/>
                    <group string="Group by">
                        <filter string="Postcode" name="group_by_postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Estate Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>